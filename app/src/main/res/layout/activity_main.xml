<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ff4f1f"
    android:layout_height="match_parent"
    tools:context="com.example.osamara.guessthekotlinnumber.MainActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="64dp"
        android:paddingLeft="10dp"
        android:text="Guess The Magic Number!"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:text="Range: 1-100" />

    <TextView
        android:id="@+id/guessedNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Guessed Numbers: "
        android:textColor="@color/White"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/enterGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Guess"
        android:textColor="@color/White"
        android:inputType="number"
        android:background="@color/GenesysCharcoal"
        android:textColorHint="@color/GenesysMediumGray"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/titleView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="submittedGuess"
        android:textColor="@color/White"
        android:background="@color/GenesysPlum"
        android:text="Submit Guess"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="49dp"
        android:background="@color/GenesysPlum"
        android:textColor="@color/White"
        android:onClick="resetGame"
        android:text="Restart Game"
        android:textAllCaps="false" />


</RelativeLayout>
